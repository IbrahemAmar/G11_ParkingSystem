<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="850" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminGui.AdminSubscribersController">

    <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: #f9f9f9;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- Title -->
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="👤 Subscriber Management" />

        <!-- Search -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="txtSearchId" promptText="Search by Subscriber ID" style="-fx-pref-width: 200;" />
            <Button fx:id="btnSearch" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="🔍 Search" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnRefresh" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="🔄 View All" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="subscriberTable" prefHeight="280">
            <columns>
                <TableColumn fx:id="colId" prefWidth="97.60000836849213" text="Subscriber Code" />
                <TableColumn fx:id="colUsername" prefWidth="96.00000762939453" text="ID" />
                <TableColumn fx:id="colFirstName" prefWidth="128.0000457763672" text="First Name" />
                <TableColumn fx:id="colLastName" prefWidth="140.0" text="Last Name" />
                <TableColumn fx:id="colRole" prefWidth="116.79995727539062" text="Username" />
            <TableColumn fx:id="colId1" prefWidth="106.39996337890625" text="Phone number" />
            <TableColumn fx:id="colId11" prefWidth="108.0" text="Email" />
            </columns>
        </TableView>

        <!-- Input Fields to Add -->
        <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <Label style="-fx-font-weight: bold;" text="➕ Add New Subscriber (role: subscriber)" />
            <HBox spacing="15">
                <TextField fx:id="txtUsername" promptText="Username" style="-fx-pref-width: 150;" />
                <PasswordField fx:id="txtPassword" promptText="Password" style="-fx-pref-width: 150;" />
                <TextField fx:id="txtFirstName" promptText="First Name" style="-fx-pref-width: 150;" />
                <TextField fx:id="txtLastName" promptText="Last Name" style="-fx-pref-width: 150;" />
            <TextField fx:id="txtLastName1" promptText="Email" style="-fx-pref-width: 150;" />
                
            </HBox>
        </VBox>

        <!-- Footer -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
             <Button fx:id="btnAddSubscriber" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="➕ Add Subscriber" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnBack" style="-fx-background-color: #9e9e9e; -fx-text-fill: white;" text="🔙 Back" />
        </HBox>

        <!-- Status -->
        <Label fx:id="lblStatus" style="-fx-text-fill: #777; -fx-font-size: 12px;" text="Status messages appear here" />
    </VBox>
</AnchorPane>
