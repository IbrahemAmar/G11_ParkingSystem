<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="subscriberGui.CarPickupController">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-padding: 40; -fx-background-color: #ffffff;">

        <Label text="🚙 Retrieve Your Vehicle"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <TextField fx:id="txtParkingCode" promptText="Enter your parking code" prefWidth="250"/>

        <Button text="🔓 Retrieve Car" fx:id="btnRetrieve"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <Label fx:id="lblConfirmation" text="✔ Your car is on the way"
               visible="false" style="-fx-text-fill: green; -fx-font-size: 14px;" />

        <Hyperlink text="❓ I lost my parking code" fx:id="linkLostCode" />

        <!-- Optional: extension if car parked over 4 hours -->
        <VBox fx:id="extendSection" visible="false" spacing="10" alignment="CENTER">
            <Label text="⏱ Parking time exceeded 4 hours" style="-fx-text-fill: #E65100;" />
            <Button text="Extend Parking Time (4 more hours)" fx:id="btnExtend" />
        </VBox>

        <Button text="🔙 Back to Menu" fx:id="btnBack" onAction="#goBack"
                style="-fx-background-color: #e0e0e0;" />
    </VBox>
</AnchorPane>
