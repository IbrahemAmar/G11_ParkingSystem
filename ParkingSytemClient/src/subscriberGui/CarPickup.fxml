<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="subscriberGui.CarPickupController">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-color: #ffffff;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="🚙 Retrieve Your Vehicle" />

        <TextField fx:id="txtParkingCode" prefWidth="250" promptText="Enter your parking code" />

        <Button fx:id="btnRetrieve" onAction="#onRetrieveClicked" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="🔓 Retrieve Car" />

        <Label fx:id="lblConfirmation" style="-fx-text-fill: green; -fx-font-size: 14px;" text="✔ Your car is on the way" visible="false" />

        <Button fx:id="btnLostCode"
        onAction="#onLostCodeClicked"
        text="❓ I lost my parking code"
        style="-fx-background-color: transparent; -fx-underline: true; -fx-text-fill: #1976d2; -fx-font-size: 14px; -fx-cursor: hand;" />



        <Button fx:id="btnBack" onAction="#goBack" style="-fx-background-color: #e0e0e0;" text="🔙 Back to Menu" />
    </VBox>
</AnchorPane>
