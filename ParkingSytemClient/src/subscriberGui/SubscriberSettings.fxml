<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="subscriberGui.SubscriberSettingsController">

    <VBox alignment="CENTER" spacing="25"
          style="-fx-padding: 40; -fx-background-color: #ffffff;"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <!-- Back Button -->
        <HBox alignment="TOP_LEFT">
            <Button fx:id="btnBack" text="🔙 Back" onAction="#handleBackButton" />
        </HBox>

        <!-- My Details Title -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="👤 My Details:" />

        <!-- My Details Grid (Labels instead of TextFields) -->
        <GridPane alignment="CENTER" hgap="15" vgap="15">
            <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="lblFullName" text="—" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Subscriber ID:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="lblSubscriberId" text="—" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Subscriber Code:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="lblSubscriberCode" text="—" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="lblUsername" text="—" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Current Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Label fx:id="lblCurrentEmail" text="—" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Current Phone:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="lblCurrentPhone" text="—" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        </GridPane>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="btnEdit" text="✏️ Edit" onAction="#handleEditButton" />
        </HBox>
    </VBox>
</AnchorPane>
