<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="subscriberGui.SubscriberDashboardController"
            stylesheets="@theme.css">

    <!-- Top toolbar -->
    <top>
        <ToolBar styleClass="toolbar-header">
            <Label text="ðŸ“‹ Subscriber Dashboard" styleClass="title-label" />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnDetails" onAction="#openDetails" text="ðŸ‘¤ Details" styleClass="btn-secondary" />
            <Button fx:id="btnLogout" onAction="#logout" text="ðŸ”™ Logout" styleClass="btn-secondary" />
        </ToolBar>
