                <Button fx:id="btnExtend" onAction="#openExtendParking" text="â± Extend Parking Time" styleClass="btn-action"/>
                <Button fx:id="btnReserve" onAction="#openReservationWindow" text="ðŸ—“ Reserve Future Parking" styleClass="btn-action"/>
