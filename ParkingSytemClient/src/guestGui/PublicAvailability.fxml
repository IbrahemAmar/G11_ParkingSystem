<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="guestGui.PublicAvailabilityController">

    <VBox alignment="CENTER" spacing="20"
          style="-fx-padding: 40; -fx-background-color: #ffffff;"
          AnchorPane.topAnchor="0.0"
          AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0">

        <!-- Title -->
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;"
               text="🅿️ Parking Spot Availability" />

        <!-- Availability status -->
        <Label fx:id="lblAvailable"
               style="-fx-font-size: 16px; -fx-text-fill: green;"
               text="✔ Spots available" />

        <!-- Parking table -->
        <TableView fx:id="tableAvailability"
                   prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="colSpotNumber"
                             prefWidth="294.4"
                             text="Parking Spot" />
                <TableColumn fx:id="colStatus"
                             prefWidth="305.6"
                             text="Status" />
            </columns>
        </TableView>

        <!-- Back button -->
        <Button fx:id="btnBack"
                onAction="#handleBackToMenu"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-pref-width: 200;"
                text="🔙 Back to Menu" />
    </VBox>
</AnchorPane>
