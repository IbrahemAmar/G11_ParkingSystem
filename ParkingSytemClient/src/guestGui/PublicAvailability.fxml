<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guestGui.PublicAvailabilityController">

    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40; -fx-background-color: #ffffff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="🅿️ Parking Spot Availability" />

        <TableView fx:id="tableAvailability" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="colSpotNumber" prefWidth="221.60003662109375" text="Spot Number" />
                <TableColumn fx:id="colStatus" minWidth="0.0" prefWidth="377.5999755859375" text="Status" />
            </columns>
        </TableView>

        <Label fx:id="lblAvailable" style="-fx-font-size: 16px; -fx-text-fill: green;" text="✔ 12 spots available" />

        <Button fx:id="btnBack" style="-fx-background-color: #E0E0E0;" text="🔙 Back to Main Menu" />
    </VBox>
</AnchorPane>
