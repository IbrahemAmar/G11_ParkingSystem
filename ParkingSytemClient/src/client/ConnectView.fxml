<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="client.ConnectViewController"
            prefWidth="450" prefHeight="250">

    <VBox alignment="CENTER" spacing="15.0"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

        <Label text="ðŸ”— Connect to Server" style="-fx-font-size: 18px;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Host:"/>
            <TextField fx:id="ipField" promptText="localhost" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="Port:"/>
            <TextField fx:id="portField" promptText="5555" prefWidth="200"/>
        </HBox>

        <Button text="Connect"
                onAction="#handleConnect"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label fx:id="statusLabel" textFill="red"/>
    </VBox>
</AnchorPane>
